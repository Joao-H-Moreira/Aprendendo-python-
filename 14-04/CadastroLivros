biblioteca = []

while True:
  titulo = input("Digite o tÃ­tulo do livro (ou 'sair' para finalizar): ")
  if titulo.lower() == 'sair':
    break
  autor = input("Digite o autor do livro: ")
  ano = int(input("Digite o ano de publicaÃ§Ã£o: "))
  livro = (titulo, autor, ano)
  biblioteca.append(livro)

print("\nðŸ“š Livros cadastrados:")
for i, livro in enumerate(biblioteca):
  print(f"{i+1}. TÃ­tulo: {livro[0]} | Autor: {livro[1]} | Ano: {livro[2]}")